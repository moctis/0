conf.dropWay = false
conf.digCeiling = false
conf.digButtom=false

fn.init()
fn.getBase()
conf.basey = base.y - 2
fn.gotoBase()
while true do
 status("waiting...")
 fn.getJob()
 local i,m,d=fn.recv(5)
 if m and i==base.id then 
  SID=i
  local t=lib.split(m)
  if m=="" then
    sleep(10)
  elseif t[1] ~= nil and #t==1 then   
   shell.run(t[1])
  elseif t[1] ~= nil and #t>=1 then   
   shell.run(t[1],unpack(t,2))
  end
 else
  sleep(10)
 end
end
