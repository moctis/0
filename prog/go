local tArgs = { ... }
if #tArgs < 1 then
	print( "Usage: go <direction> <distance>" )
	return
end

local tHandlers = {
	["fd"] = turtle.forward,
	["forward"] = turtle.forward,
	["forwards"] = turtle.forward,
	["bk"] = turtle.back,
	["back"] = turtle.back,
	["up"] = turtle.up,
	["dn"] = turtle.down,
	["down"] = turtle.down,
	["lt"] = turtle.turnLeft,
	["left"] = turtle.turnLeft,
	["rt"] = turtle.turnRight,
	["right"] = turtle.turnRight,
	["n"] = tur.north,
	["e"] = tur.east,
	["w"] = tur.west,
	["s"] = tur.south,
	["north"] = tur.north,
	["east"] = tur.east,
	["west"] = tur.west,
	["south"] = tur.south,
}

local nArg = 1
while nArg <= #tArgs do
	local sDirection = tArgs[nArg]
	local nDistance = 1
	if nArg < #tArgs then
		local num = tonumber( tArgs[nArg + 1] )
		if num then
			nDistance = num
			nArg = nArg + 1
		end
	end
	nArg = nArg + 1

	local fnHandler = tHandlers[string.lower(sDirection)]
	if fnHandler then
		while nDistance > 0 do
			if fnHandler() then				
				nDistance = nDistance - 1
			elseif turtle.getFuelLevel() == 0 then
				print( "Out of fuel" )
				return
			elseif digable then
				if fnHandler==turtle.up then turtle.digUp()
				elseif fnHandler==turtle.down then turtle.digDown()
				elseif fnHandler==turtle.back then 
				 turtle.turnLeft()
				 turtle.turnLeft()
				 turtle.dig()
				 turtle.turnLeft()
				 turtle.turnLeft()			
				else turtle.dig() end
				sleep(0.5)
			else
				sleep(0.5)
			end
		end
	else
		print( "No such direction: "..sDirection )
		print( "Try: forward, back, up, down" )
		return
	end

end