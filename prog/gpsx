local t=lib.split(os.getComputerLabel())
fn.open()
local i=0
while true do
 if #t==0 then
  local x,y,z = gps.locate(10)
  if x~=nill then
   os.setComputerLabel('gpsx host '..x..' '..y..' '..z)
   os.reboot()
  end
 else
  local x,y,z = gps.locate(10)
  if x~=nill then
   if x~=tonumber(t[2]) or y~=tonumber(t[3]) or z~=tonumber(t[4]) then
    os.setComputerLabel('gpsx host '..x..' '..y..' '..z)
    os.reboot()
   end
  end
  shell.run('gps', unpack(t,1))
 end
 sleep(10)
end