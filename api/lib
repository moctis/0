function split(data) 
	local t={} 
	local i=1
	for x in string.gmatch(data,'[^%s]+') do
	 t[i]=x
	 i=i+1
	end
	return t
end

function join(t,s)
 local msg=''
 if s==nil then s=1 end
 for i=s,#t do
  msg=msg..t[i]..' '
 end
 return msg
end
 
function text(t)
 return textutils.serialize(t)
end

function table(t)
 return textutils.unserialize(t)
end

function parse(data) 
	local t={} 
	for x in string.gmatch(data,'[^%s]+') do
	 if t.fn==nil then t.fn=x
	 elseif t.args==nil then t.args=x 
	 else t.args=t.args..' '..x  end
	end
	return t
end